#!/bin/bash
set -e

# Attempt to reinstall all default bArchTi packages and reset all the default configs.

echo -e "This will reinstall all the default bArchTi packages and reset all default configs.\nWarning: All user changes to configs will be lost.\n"

if gum confirm "Are you sure you want to reinstall and lose all config changes?"; then
  barchti-reinstall-git
  barchti-reinstall-pkgs
  barchti-reinstall-configs

  gum confirm "System has been reinstalled. Reboot?" && barchti-system-reboot
fi
