#!/bin/bash

# Set the branch for bArchTi's git repository.

if (($# == 0)); then
  echo "Usage: barchti-branch-set [master|rc|dev]"
  exit 1
else
  branch="$1"
fi

if [[ $branch != "master" && $branch != "rc" && $branch != "dev" ]]; then
  echo "Error: Invalid branch '$branch'. Must be one of: master, rc, dev"
  exit 1
fi

git -C $BARCHTI_PATH switch $branch
