#!/bin/bash

# Overwrite the user config for the Plymouth drive decryption and boot sequence with the bArchTi default and rebuild it.

sudo cp ~/.local/share/barchti/default/plymouth/* /usr/share/plymouth/themes/barchti/
sudo plymouth-set-default-theme barchti

if command -v limine-mkinitcpio &>/dev/null; then
  sudo limine-mkinitcpio
else
  sudo mkinitcpio -P
fi
