#!/bin/bash
set -e

# Overwrite all user configs with the bArchTi defaults.

if (( EUID == 0 )); then
  echo "Error: This script should not be run as root"
  exit 1
fi

echo "Resetting all bArchTi configs"
cp -R ~/.local/share/barchti/config/* ~/.config/
cp ~/.local/share/barchti/default/bashrc ~/.bashrc
echo '[[ -f ~/.bashrc ]] && . ~/.bashrc' | tee ~/.bash_profile >/dev/null

$(bash $BARCHTI_PATH/install/config/theme.sh)

barchti-refresh-limine
barchti-refresh-plymouth
barchti-nvim-setup
