#!/bin/bash

# Launch a floating terminal with the bArchTi logo presentation, then execute the command passed in, and finally end with the barchti-show-done presentation.
# Used by actions such as Update System.

cmd="$*"
exec setsid uwsm-app -- xdg-terminal-exec --app-id=org.barchti.terminal --title=bArchTi -e bash -c "barchti-show-logo; $cmd; if (( \$? != 130 )); then barchti-show-done; fi"
