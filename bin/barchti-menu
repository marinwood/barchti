#!/bin/bash

# Launch the bArchTi Menu or takes a parameter to jump straight to a submenu.

export PATH="$HOME/.local/share/barchti/bin:$PATH"

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ $BACK_TO_EXIT == "true" ]]; then
    exit 0
  elif [[ -n $parent_menu ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n $preselect ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n $index ]]; then
      args+=("-c" "$index")
    fi
  fi

  echo -e "$options" | barchti-launch-walker --dmenu --width 295 --minheight 1 --maxheight 630 -p "$promptâ€¦" "${args[@]}" 2>/dev/null
}

terminal() {
  xdg-terminal-exec --app-id=org.barchti.terminal "$@"
}

present_terminal() {
  barchti-launch-floating-terminal-with-presentation $1
}

open_in_editor() {
  notify-send "Editing config file" "$1"
  barchti-launch-editor "$1"
}

install() {
  present_terminal "echo 'Installing $1...'; barchti-pkg-add $2"
}

install_and_launch() {
  present_terminal "echo 'Installing $1...'; barchti-pkg-add $2 && setsid gtk-launch $3"
}

install_font() {
  present_terminal "echo 'Installing $1...'; barchti-pkg-add $2 && sleep 2 && barchti-font-set '$3'"
}

install_terminal() {
  present_terminal "barchti-install-terminal $1"
}

aur_install() {
  present_terminal "echo 'Installing $1 from AUR...'; barchti-pkg-aur-add $2"
}

aur_install_and_launch() {
  present_terminal "echo 'Installing $1 from AUR...'; barchti-pkg-aur-add $2 && setsid gtk-launch $3"
}

show_learn_menu() {
  case $(menu "Learn" "ï„œ  Keybindings\nï…  bArchTi\nï™  Hyprland\nó°£‡  Arch\nîš®  Neovim\nó±†ƒ  Bash") in
  *Keybindings*) barchti-menu-keybindings ;;
  *bArchTi*) barchti-launch-webapp "https://learn.omacom.io/2/the-omarchy-manual" ;;
  *Hyprland*) barchti-launch-webapp "https://wiki.hypr.land/" ;;
  *Arch*) barchti-launch-webapp "https://wiki.archlinux.org/title/Main_page" ;;
  *Bash*) barchti-launch-webapp "https://devhints.io/bash" ;;
  *Neovim*) barchti-launch-webapp "https://www.lazyvim.org/keymaps" ;;
  *) show_main_menu ;;
  esac
}

show_trigger_menu() {
  case $(menu "Trigger" "ï€°  Capture\nï”  Share\nó°”  Toggle\nî½°  Hardware") in
  *Capture*) show_capture_menu ;;
  *Share*) show_share_menu ;;
  *Toggle*) show_toggle_menu ;;
  *Hardware*) show_hardware_menu ;;
  *) show_main_menu ;;
  esac
}

show_capture_menu() {
  case $(menu "Capture" "ï€°  Screenshot\nï€½  Screenrecord\nó°ƒ‰  Color") in
  *Screenshot*) barchti-cmd-screenshot ;;
  *Screenrecord*) show_screenrecord_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) back_to show_trigger_menu ;;
  esac
}

get_webcam_list() {
  v4l2-ctl --list-devices 2>/dev/null | while IFS= read -r line; do
    if [[ $line != $'\t'* && -n $line ]]; then
      local name="$line"
      IFS= read -r device || break
      device=$(echo "$device" | tr -d '\t' | head -1)
      [[ -n $device ]] && echo "$device  $name"
    fi
  done
}

show_webcam_select_menu() {
  local devices=$(get_webcam_list)
  local count=$(echo "$devices" | grep -c . 2>/dev/null || echo 0)

  if [[ -z $devices ]] || ((count == 0)); then
    notify-send "No webcam devices found" -u critical -t 3000
    return 1
  fi

  if ((count == 1)); then
    echo "$devices" | awk '{print $1}'
  else
    menu "Select Webcam" "$devices" | awk '{print $1}'
  fi
}

show_screenrecord_menu() {
  barchti-cmd-screenrecord --stop-recording && exit 0

  case $(menu "Screenrecord" "ï€½  With no audio\nï€½  With desktop audio\nï€½  With desktop + microphone audio\nï€½  With desktop + microphone audio + webcam") in
  *"With no audio") barchti-cmd-screenrecord ;;
  *"With desktop audio") barchti-cmd-screenrecord --with-desktop-audio ;;
  *"With desktop + microphone audio") barchti-cmd-screenrecord --with-desktop-audio --with-microphone-audio ;;
  *"With desktop + microphone audio + webcam")
    local device=$(show_webcam_select_menu) || {
      back_to show_capture_menu
      return
    }
    barchti-cmd-screenrecord --with-desktop-audio --with-microphone-audio --with-webcam --webcam-device="$device"
    ;;
  *) back_to show_capture_menu ;;
  esac
}

show_share_menu() {
  case $(menu "Share" "ï¿  Clipboard\nî©»  File \nï„”  Folder") in
  *Clipboard*) barchti-cmd-share clipboard ;;
  *File*) terminal bash -c "barchti-cmd-share file" ;;
  *Folder*) terminal bash -c "barchti-cmd-share folder" ;;
  *) back_to show_trigger_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "ó±„„  Screensaver\nó°”  Nightlight\nó±«–  Idle Lock\nó°œ  Top Bar\nó±‚¬  Workspace Layout\nî˜ª  Window Gaps\nï‹  1-Window Ratio\nó°¹  Display Scaling") in

  *Screensaver*) barchti-toggle-screensaver ;;
  *Nightlight*) barchti-toggle-nightlight ;;
  *Idle*) barchti-toggle-idle ;;
  *Bar*) barchti-toggle-waybar ;;
  *Layout*) barchti-hyprland-workspace-layout-toggle ;;
  *Ratio*) barchti-hyprland-window-single-square-aspect-toggle ;;
  *Gaps*) barchti-hyprland-window-gaps-toggle ;;
  *Scaling*) barchti-hyprland-monitor-scaling-cycle ;;
  *) back_to show_trigger_menu ;;
  esac
}

show_hardware_menu() {
  case $(menu "Toggle" "î°™  Hybrid GPU") in
  *"Hybrid GPU"*) present_terminal barchti-toggle-hybrid-gpu ;;
  *) show_trigger_menu ;;
  esac
}

show_style_menu() {
  case $(menu "Style" "ó°¸Œ  Theme\nî™™  Font\nï€¾  Background\nï™  Hyprland\nó±„„  Screensaver\nî©´  About") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) show_background_menu ;;
  *Hyprland*) open_in_editor ~/.config/hypr/looknfeel.conf ;;
  *Screensaver*) open_in_editor ~/.config/barchti/branding/screensaver.txt ;;
  *About*) open_in_editor ~/.config/barchti/branding/about.txt ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  barchti-launch-walker -m menus:barchtithemes --width 800 --minheight 400
}

show_background_menu() {
  barchti-launch-walker -m menus:barchtiBackgroundSelector --width 800 --minheight 400
}

show_font_menu() {
  theme=$(menu "Font" "$(barchti-font-list)" "--width 350" "$(barchti-font-current)")
  if [[ $theme == "CNCLD" || -z $theme ]]; then
    back_to show_style_menu
  else
    barchti-font-set "$theme"
  fi
}

show_setup_menu() {
  local options="î˜¸  Audio\nï‡«  Wifi\nó°‚¯  Bluetooth\nó±‹  Power Profile\nï€‘  System Sleep\nó°¹  Monitors"
  [[ -f ~/.config/hypr/bindings.conf ]] && options="$options\nï„œ  Keybindings"
  [[ -f ~/.config/hypr/input.conf ]] && options="$options\nî¾º  Input"
  options="$options\nó°±”  DNS\nî¬‘  Security\nî˜•  Config"

  case $(menu "Setup" "$options") in
  *Audio*) barchti-launch-audio ;;
  *Wifi*) barchti-launch-wifi ;;
  *Bluetooth*) barchti-launch-bluetooth ;;
  *Power*) show_setup_power_menu ;;
  *System*) show_setup_system_menu ;;
  *Monitors*) open_in_editor ~/.config/hypr/monitors.conf ;;
  *Keybindings*) open_in_editor ~/.config/hypr/bindings.conf ;;
  *Input*) open_in_editor ~/.config/hypr/input.conf ;;
  *DNS*) present_terminal barchti-setup-dns ;;
  *Security*) show_setup_security_menu ;;
  *Config*) show_setup_config_menu ;;
  *) show_main_menu ;;
  esac
}

show_setup_power_menu() {
  profile=$(menu "Power Profile" "$(barchti-powerprofiles-list)" "" "$(powerprofilesctl get)")

  if [[ $profile == "CNCLD" || -z $profile ]]; then
    back_to show_setup_menu
  else
    powerprofilesctl set "$profile"
  fi
}

show_setup_security_menu() {
  case $(menu "Setup" "ó°ˆ·  Fingerprint\nî¬‘  Fido2") in
  *Fingerprint*) present_terminal barchti-setup-fingerprint ;;
  *Fido2*) present_terminal barchti-setup-fido2 ;;
  *) show_setup_menu ;;
  esac
}

show_setup_config_menu() {
  case $(menu "Setup" "ï’‰  Defaults\nï™  Hyprland\nï™  Hypridle\nï™  Hyprlock\nï™  Hyprsunset\nï  Swayosd\nó°Œ§  Walker\nó°œ  Waybar\nó°…  XCompose") in
  *Defaults*) open_in_editor ~/.config/uwsm/default ;;
  *Hyprland*) open_in_editor ~/.config/hypr/hyprland.conf ;;
  *Hypridle*) open_in_editor ~/.config/hypr/hypridle.conf && barchti-restart-hypridle ;;
  *Hyprlock*) open_in_editor ~/.config/hypr/hyprlock.conf ;;
  *Hyprsunset*) open_in_editor ~/.config/hypr/hyprsunset.conf && barchti-restart-hyprsunset ;;
  *Swayosd*) open_in_editor ~/.config/swayosd/config.toml && barchti-restart-swayosd ;;
  *Walker*) open_in_editor ~/.config/walker/config.toml && barchti-restart-walker ;;
  *Waybar*) open_in_editor ~/.config/waybar/config.jsonc && barchti-restart-waybar ;;
  *XCompose*) open_in_editor ~/.XCompose && barchti-restart-xcompose ;;
  *) show_setup_menu ;;
  esac
}

show_setup_system_menu() {
  local options=""

  if [[ -f ~/.local/state/barchti/toggles/suspend-off ]]; then
    options="$optionsó°’²  Enable Suspend"
  else
    options="$optionsó°’²  Disable Suspend"
  fi

  if barchti-hibernation-available; then
    options="$options\nó°¤  Disable Hibernate"
  else
    options="$options\nó°¤  Enable Hibernate"
  fi

  case $(menu "System" "$options") in
  *Suspend*) barchti-toggle-suspend ;;
  *"Enable Hibernate"*) present_terminal barchti-hibernation-setup ;;
  *"Disable Hibernate"*) present_terminal barchti-hibernation-remove ;;
  *) show_setup_menu ;;
  esac
}

show_install_menu() {
  case $(menu "Install" "ó°£‡  Package\nó°£‡  AUR\nï‰¨  Web App\nï’‰  TUI\nï’‡  Service\nî¯  Style\nó°µ®  Development\nï…œ  Editor\nï’‰  Terminal\nó±š¤  AI\nó°²  Windows\nï„›  Gaming") in
  *Package*) terminal barchti-pkg-install ;;
  *AUR*) terminal barchti-pkg-aur-install ;;
  *Web*) present_terminal barchti-webapp-install ;;
  *TUI*) present_terminal barchti-tui-install ;;
  *Service*) show_install_service_menu ;;
  *Style*) show_install_style_menu ;;
  *Development*) show_install_development_menu ;;
  *Editor*) show_install_editor_menu ;;
  *Terminal*) show_install_terminal_menu ;;
  *AI*) show_install_ai_menu ;;
  *Windows*) present_terminal "barchti-windows-vm install" ;;
  *Gaming*) show_install_gaming_menu ;;
  *) show_main_menu ;;
  esac
}

show_install_service_menu() {
  case $(menu "Install" "îœ‡  Dropbox\nï’‡  Tailscale\nó±‡±  NordVPN\nó°Ÿµ  Bitwarden\nîŸ°  Chromium Account") in
  *Dropbox*) present_terminal barchti-install-dropbox ;;
  *Tailscale*) present_terminal barchti-install-tailscale ;;
  *NordVPN*) present_terminal barchti-install-nordvpn ;;
  *Bitwarden*) install_and_launch "Bitwarden" "bitwarden bitwarden-cli" "bitwarden" ;;
  *Chromium*) present_terminal barchti-install-chromium-google-account ;;
  *) show_install_menu ;;
  esac
}

show_install_editor_menu() {
  case $(menu "Install" "î£š  VSCode\nï…œ  Cursor\nï…œ  Zed\nï…œ  Sublime Text\nï…œ  Helix\nï…œ  Emacs") in
  *VSCode*) present_terminal barchti-install-vscode ;;
  *Cursor*) install_and_launch "Cursor" "cursor-bin" "cursor" ;;
  *Zed*) install_and_launch "Zed" "zed" "dev.zed.Zed" ;;
  *Sublime*) install_and_launch "Sublime Text" "sublime-text-4" "sublime_text" ;;
  *Helix*) install "Helix" "helix" ;;
  *Emacs*) install "Emacs" "emacs-wayland" && systemctl --user enable --now emacs.service ;;
  *) show_install_menu ;;
  esac
}

show_install_terminal_menu() {
  case $(menu "Install" "ï’‰  Alacritty\nï’‰  Ghostty\nï’‰  Kitty") in
  *Alacritty*) install_terminal "alacritty" ;;
  *Ghostty*) install_terminal "ghostty" ;;
  *Kitty*) install_terminal "kitty" ;;
  *) show_install_menu ;;
  esac
}

show_install_ai_menu() {
  ollama_pkg=$(
    (command -v nvidia-smi &>/dev/null && echo ollama-cuda) ||
      (command -v rocminfo &>/dev/null && echo ollama-rocm) ||
      echo ollama
  )

  case $(menu "Install" "î°’  Dictation\nó±š¤  Claude Code\nó±š¤  Codex\nó±š¤  Gemini CLI\nó±š¤  Copilot CLI\nó±š¤  Cursor CLI\nó±š¤  LM Studio\nó±š¤  Ollama\nó±š¤  Crush") in
  *Dictation*) present_terminal barchti-voxtype-install ;;
  *Claude*) install "Claude Code" "claude-code" ;;
  *Codex*) install "Codex" "openai-codex" ;;
  *Gemini*) install "Gemini CLI" "gemini-cli" ;;
  *Copilot*) install "Copilot CLI" "github-copilot-cli" ;;
  *Cursor*) install "Cursor CLI" "cursor-cli" ;;
  *Studio*) install "LM Studio" "lmstudio" ;;
  *Ollama*) install "Ollama" $ollama_pkg ;;
  *Crush*) install "Crush" "crush-bin" ;;
  *) show_install_menu ;;
  esac
}

show_install_gaming_menu() {
  case $(menu "Install" "ï†¶  Steam\nó°¢¹  NVIDIA GeForce NOW\nï„›  RetroArch [AUR]\nó°³  Minecraft\nó°–º  Xbox Controller [AUR]") in
  *Steam*) present_terminal barchti-install-steam ;;
  *GeForce*) present_terminal barchti-install-geforce-now ;;
  *RetroArch*) aur_install_and_launch "RetroArch" "retroarch retroarch-assets libretro libretro-fbneo" "com.libretro.RetroArch.desktop" ;;
  *Minecraft*) install_and_launch "Minecraft" "minecraft-launcher" "minecraft-launcher" ;;
  *Xbox*) present_terminal barchti-install-xbox-controllers ;;
  *) show_install_menu ;;
  esac
}

