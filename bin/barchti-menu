show_update_menu() {
  case $(menu "Update" "î¤€â€‰ bArchTi\nó°”«  Channel\nî˜•  Config\nó°¸Œ  Extra Themes\nî®¢  Process\nó°‡…  Hardware\nî©¸  Firmware\nî¬‘  Password\nî¬  Timezone\nîƒ  Time") in
