  esac
}

show_update_channel_menu() {
  case $(menu "Update channel" "ğŸŸ¢ Stable\nğŸŸ¡ RC\nğŸŸ  Edge\nğŸ”´ Dev") in
  *Stable*) present_terminal "barchti-channel-set stable" ;;
  *RC*) present_terminal "barchti-channel-set rc" ;;
  *Edge*) present_terminal "barchti-channel-set edge" ;;
  *Dev*) present_terminal "barchti-channel-set dev" ;;
  *) show_update_menu ;;
  esac
}
show_update_process_menu() {
  case $(menu "Restart" "ï™  Hypridle\nï™  Hyprsunset\nï  Swayosd\nó°Œ§  Walker\nó°œ  Waybar") in
  *Hypridle*) barchti-restart-hypridle ;;
  *Hyprsunset*) barchti-restart-hyprsunset ;;
  *Swayosd*) barchti-restart-swayosd ;;
  *Walker*) barchti-restart-walker ;;
  *Waybar*) barchti-restart-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_config_menu() {
  case $(menu "Use default config" "ï™  Hyprland\nï™  Hypridle\nï™  Hyprlock\nï™  Hyprsunset\nó±£´  Plymouth\nï  Swayosd\nï’‰  Tmux\nó°Œ§  Walker\nó°œ  Waybar") in
  *Hyprland*) present_terminal barchti-refresh-hyprland ;;
  *Hypridle*) present_terminal barchti-refresh-hypridle ;;
  *Hyprlock*) present_terminal barchti-refresh-hyprlock ;;
  *Hyprsunset*) present_terminal barchti-refresh-hyprsunset ;;
  *Plymouth*) present_terminal barchti-refresh-plymouth ;;
  *Swayosd*) present_terminal barchti-refresh-swayosd ;;
  *Tmux*) present_terminal barchti-refresh-tmux ;;
  *Walker*) present_terminal barchti-refresh-walker ;;
  *Waybar*) present_terminal barchti-refresh-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_hardware_menu() {
  case $(menu "Restart" "î˜¸  Audio\nó±š¾  Wi-Fi\nó°‚¯  Bluetooth") in
  *Audio*) present_terminal barchti-restart-pipewire ;;
  *Wi-Fi*) present_terminal barchti-restart-wifi ;;
  *Bluetooth*) present_terminal barchti-restart-bluetooth ;;
  *) show_update_menu ;;
  esac
}

show_update_password_menu() {
  case $(menu "Update Password" "î¬‘  Drive Encryption\nî¬‘  User") in
  *Drive*) present_terminal barchti-drive-set-password ;;
  *User*) present_terminal passwd ;;
  *) show_update_menu ;;
  esac
}

show_about() {
  barchti-launch-about
}

show_system_menu() {
  local options="ó±„„  Screensaver\nï€£  Lock"
  [[ ! -f ~/.local/state/barchti/toggles/suspend-off ]] && options="$options\nó°’²  Suspend"
  barchti-hibernation-available && options="$options\nó°¤  Hibernate"
  options="$options\nó°ƒ  Logout\nó°œ‰  Restart\nó°¥  Shutdown"

  case $(menu "System" "$options") in
  *Screensaver*) barchti-launch-screensaver force ;;
  *Lock*) barchti-lock-screen ;;
  *Suspend*) systemctl suspend ;;
  *Hibernate*) systemctl hibernate ;;
  *Logout*) barchti-system-logout ;;
  *Restart*) barchti-system-reboot ;;
  *Shutdown*) barchti-system-shutdown ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "ó°€»  Apps\nó°§‘  Learn\nó±“  Trigger\nî¯  Style\nî˜•  Setup\nó°‰‰  Install\nó°­Œ  Remove\nï€¡  Update\nî©´  About\nï€‘  System")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) walker -p "Launchâ€¦" ;;
  *learn*) show_learn_menu ;;
  *trigger*) show_trigger_menu ;;
  *toggle*) show_toggle_menu ;;
  *share*) show_share_menu ;;
  *background*) show_background_menu ;;
  *capture*) show_capture_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *screenrecord*) show_screenrecord_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) show_about ;;
  *system*) show_system_menu ;;
  esac
}

# Allow user extensions and overrides
USER_EXTENSIONS="$HOME/.config/barchti/extensions/menu.sh"
[[ -f $USER_EXTENSIONS ]] && source "$USER_EXTENSIONS"

if [[ -n $1 ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
