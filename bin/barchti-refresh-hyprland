#!/bin/bash

# Overwrite all the user configs in ~/.config/hypr with the bArchTi defaults.

barchti-refresh-config hypr/autostart.conf
barchti-refresh-config hypr/bindings.conf
barchti-refresh-config hypr/input.conf
barchti-refresh-config hypr/looknfeel.conf
barchti-refresh-config hypr/hyprland.conf
