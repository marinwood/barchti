#!/bin/bash

# Ensure all default .desktop, web apps, and TUIs are installed.

# Copy and sync icon files
mkdir -p ~/.local/share/icons/hicolor/48x48/apps/
cp ~/.local/share/barchti/applications/icons/*.png ~/.local/share/icons/hicolor/48x48/apps/
gtk-update-icon-cache ~/.local/share/icons/hicolor &>/dev/null

# Copy .desktop declarations
mkdir -p ~/.local/share/applications
cp ~/.local/share/barchti/applications/*.desktop ~/.local/share/applications/
cp ~/.local/share/barchti/applications/hidden/*.desktop ~/.local/share/applications/

# Refresh the webapps and TUIs
bash $BARCHTI_PATH/install/packaging/icons.sh
bash $BARCHTI_PATH/install/packaging/webapps.sh
bash $BARCHTI_PATH/install/packaging/tuis.sh

update-desktop-database ~/.local/share/applications
