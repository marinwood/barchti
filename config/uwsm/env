# Changes require a restart to take effect.

# Ensure bArchTi bins are in the path
export BARCHTI_PATH=$HOME/.local/share/barchti
export PATH=$BARCHTI_PATH/bin:$PATH

# Set default terminal and editor
source ~/.config/uwsm/default

# Activate mise if present on the system
barchti-cmd-present mise && eval "$(mise activate bash)"
